@require 'constants.styl'

*
    box-sizing border-box

body
    margin 0
    overflow-x hidden
    overflow-y scroll
    min-height 100vh
    background bgColor

    font-family Helvetica
    font-size 19px
    font-weight normal
    color textColor1

#app
    width 100%
    height 100vh
    position relative


.mobile-only
    display none !important
@media screen and (max-width: 700px) {
    .desktop-only {
        display: none !important;
    }
    .mobile-only {
        display: inline-block !important;
    }
}


a
    text-decoration none
    color textColorBlue
    transition color 0.3s ease
a:hover
    color textColor1
